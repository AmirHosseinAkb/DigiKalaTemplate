@model ResetPasswordViewModel
@{
    Layout = null;
    var currentCulture =
    System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}

<html lang="@currentCulture">
<head>
    <title>@PageTitles.ResetPassword</title>

    <partial name="PartialViews/_Styles"></partial>

</head>
<body>
    <div class="page-wrapper">
        <partial name="PartialViews/_RegisterAndLoginHeader"></partial>
        <main class="page-content page-auth">

            <div class="auth-container">
                <div class="auth-title mb-3">@DataDictionaries.ResetPassword</div>
                <div class="auth-box ui-box">
                    <form method="post" class="auth-form">
                        <div class="form-element-row mb-3">
                            <label class="label">@DataDictionaries.NewPassword</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-element-row mb-3">
                            <label class="label">@DataDictionaries.RepeatNewPassword</label>
                            <input asp-for="RepeatNewPassword"  type="password"  class="form-control" placeholder="">
                            <span asp-validation-for="RepeatNewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-element-row">
                            <button class="btn btn-primary">@ButtonCaptions.ResetPassword</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <partial name="PartialViews/_RegisterAndLoginFooter"></partial>
    </div>
    <partial name="PartialViews/_Scripts"></partial>
</body>
</html>
