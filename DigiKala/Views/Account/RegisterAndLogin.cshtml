@model RegisterAndLoginViewModel

@{
    Layout = null;
    var currentCulture =
    System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}

<html lang="">
<head>
    <title>@PageTitles.LoginAndRegister</title>
    <partial name="PartialViews/_Styles"></partial>
</head>
<body>
    <div class="page-wrapper">
        @if (ViewBag.MessageDoesntSend==true)
        {
            <div class="alert alert-warning">
                متاسفانه خطایی در ارسال پیامک رخ داد
            </div>
        }
        <partial name="PartialViews/_RegisterAndLoginHeader"></partial>
        <main class="page-content page-auth">
            <!-- auth-container -->
            <div class="auth-container">
                @if (ViewBag.IsEmailChanged == true)
                {
                    <div class="alert alert-warning">
                        @DataDictionaries.ReLoginAfterEditEmail
                    </div>
                }
                <div class="auth-title mb-3">@DataDictionaries.RegisterAndLogin</div>

                <div class="auth-box ui-box">

                    <form method="post" class="auth-form">

                        <div class="form-element-row mb-5">
                            <input asp-for="EmailOrPhoneNumber" type="text" class="form-control" placeholder="@DataDictionaries.EmailOrPhone">
                            <span asp-validation-for=EmailOrPhoneNumber class="text-danger"></span>
                        </div>

                        <div class="form-element-row mb-3">
                            <button class="btn btn-primary">@ButtonCaptions.Continue</button>
                        </div>

                        <div class="form-element-row">
                            <div>
                                با ورود و یا ثبت نام در سایت شما <a href="#" class="link">
                                    شرایط و
                                    قوانین
                                </a> استفاده
                                از تمام سرویس های
                                سایت و <a href="#" class="link">قوانین حریم خصوصی</a> آن را می‌پذیرید.
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </main>
        <partial name="PartialViews/_RegisterAndLoginFooter"></partial>
    </div>
    <partial name="PartialViews/_Scripts"></partial>
</body>
</html>


